<Window x:Class="WinSwitch.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="WinSwitch — Windows Smart Backup" Height="640" Width="980"
    WindowStartupLocation="CenterScreen"
    Background="#23272E">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
    <Border CornerRadius="16" Background="#2D333B" Padding="18" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock FontSize="20" FontWeight="Bold" Foreground="#F6F8FA">WinSwitch</TextBlock>
                    <TextBlock Foreground="#AAB2BD">Back up your Windows data to an external drive in one click.</TextBlock>
                </StackPanel>

                <!-- No Spacing in WPF StackPanel; use per-child Margin -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock VerticalAlignment="Center" Text="Destination:"/>
                    <ComboBox Width="260" ItemsSource="{Binding Destinations}" SelectedItem="{Binding SelectedDestination}" DisplayMemberPath="DisplayName" Margin="8,0,0,0"/>
                    <Button Content="Refresh" Command="{Binding RefreshDestinationsCommand}" Margin="8,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Body -->
        <Grid Grid.Row="1" Margin="0,16,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Sources -->
            <Border CornerRadius="16" Background="#2D333B" Padding="18" Margin="0,0,16,0">
                <StackPanel>
                    <TextBlock FontSize="16" FontWeight="SemiBold" Foreground="#F6F8FA">Sources</TextBlock>
                    <TextBlock Foreground="#AAB2BD" Margin="0,2,0,10">Choose what to back up.</TextBlock>

                    <UniformGrid Columns="2" Rows="3" Margin="0,6,0,8">
                        <CheckBox Content="Desktop" IsChecked="{Binding Sources[0].IsSelected}"/>
                        <CheckBox Content="Documents" IsChecked="{Binding Sources[1].IsSelected}"/>
                        <CheckBox Content="Pictures" IsChecked="{Binding Sources[2].IsSelected}"/>
                        <CheckBox Content="Videos" IsChecked="{Binding Sources[3].IsSelected}"/>
                        <CheckBox Content="Music" IsChecked="{Binding Sources[4].IsSelected}"/>
                        <CheckBox Content="Downloads" IsChecked="{Binding Sources[5].IsSelected}"/>
                    </UniformGrid>

                    <TextBlock FontWeight="SemiBold" Margin="0,10,0,4" Foreground="#F6F8FA">Custom folders</TextBlock>
                    <ListBox ItemsSource="{Binding CustomSources}" Height="140">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <DockPanel LastChildFill="False">
                                    <TextBlock Text="{Binding Path}" VerticalAlignment="Center" />
                                    <Button Content="Remove"
                                            DockPanel.Dock="Right"
                                            Command="{Binding DataContext.RemoveCustomSourceCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Margin="8,0,0,0"/>
                                </DockPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Add Folder…" Command="{Binding AddCustomSourceCommand}"/>
                        <TextBlock Foreground="#AAB2BD" VerticalAlignment="Center" Margin="8,0,0,0">Use this for project folders, AppData, etc.</TextBlock>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Actions / Progress -->
            <Border Grid.Column="1" CornerRadius="16" Background="#2D333B" Padding="18">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock FontSize="16" FontWeight="SemiBold" Foreground="#F6F8FA">Backup</TextBlock>

                    <!-- No Spacing; use per-button Margin -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,8">
                        <Button Content="Backup Now" Command="{Binding BackupCommand}" IsEnabled="{Binding CanStartBackup}"/>
                        <Button Content="Cancel" Command="{Binding CancelCommand}" Margin="8,0,0,0"/>
                        <Button Content="Restore…" Command="{Binding RestoreCommand}" Margin="8,0,0,0"/>
                        <Button Content="Clear Log" Command="{Binding ClearLogCommand}" Margin="8,0,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2">
                        <ProgressBar Minimum="0" Maximum="100" Value="{Binding Percent}"/>
                        <TextBlock Margin="0,6,0,0">
                            <Run Text="{Binding StatusText}"/>
                        </TextBlock>
                        <Border BorderBrush="#444C56" BorderThickness="1" CornerRadius="8" Margin="0,8,0,0" Padding="8" Background="#22272E" Height="220">
                            <TextBox FontFamily="Consolas" FontSize="13" TextWrapping="Wrap" Text="{Binding LogText}" IsReadOnly="True" Background="#22272E" Foreground="#FFFFFF" BorderThickness="0" VerticalScrollBarVisibility="Auto" Name="LogTextBox"/>
                        </Border>
                    </StackPanel>

                    <TextBlock Grid.Row="3" Foreground="#E0E6F0" Margin="0,8,0,0">
                        Backups are stored under <Run Text="WinSwitch\Backups\[timestamp]"/> on the selected drive.
                    </TextBlock>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer -->
        <DockPanel Grid.Row="2">
            <TextBlock Foreground="#E0E6F0">Tip: Keep the destination drive NTFS for best compatibility and performance.</TextBlock>
        </DockPanel>
    </Grid>
</Window>
